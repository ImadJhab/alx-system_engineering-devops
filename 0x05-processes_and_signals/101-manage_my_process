#!/usr/bin/env bash
# (init) script 101-manage_my_process that manages manage_my_process
MANAGE_PROCESS_SCRIPT="/path/to/manage_my_process"
PID_FILE="/var/run/my_process.pid"

start() {
    if [ -f "$PID_FILE" ]; then
        :
    else
        $MANAGE_PROCESS_SCRIPT &
        echo $! > "$PID_FILE"
        echo "manage_my_process started"
    fi
}
stop() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        kill "$PID"
        rm -f "$PID_FILE"
        echo "manage_my_process stopped"
    fi
}
restart() {
    stop
    start
    echo "manage_my_process restarted"
}
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac
exit 0
